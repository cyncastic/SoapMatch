= form_with(model: brand) do |form|
  - if brand.errors.any?
    %div{style: "color: red"}
      %h2
        = pluralize(brand.errors.count, "error")
        prohibited this brand from being saved:
      %ul
        - brand.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :url, style: "display: block"
    = form.text_field :url
  %div
    = form.submit